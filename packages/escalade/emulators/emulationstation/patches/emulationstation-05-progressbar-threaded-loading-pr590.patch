+		_mutex.unlock();
+	}
+
+	void ThreadPool::wait()
+	{
+		mWaiting = true;
+		while (mNumWork.load() > 0)
+			std::this_thread::yield();
+	}
+
+	void ThreadPool::wait(work_function work, int delay)
+	{
