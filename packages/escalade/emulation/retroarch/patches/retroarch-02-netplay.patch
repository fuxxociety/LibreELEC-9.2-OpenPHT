+   uint32_t state[WORDS_PER_INPUT] = {0, 0, 0};
+   struct delta_frame *ptr = &netplay->buffer[netplay->self_ptr];
+   size_t i;
+
+   if (!netplay_delta_frame_ready(netplay, ptr, netplay->self_frame_count))
