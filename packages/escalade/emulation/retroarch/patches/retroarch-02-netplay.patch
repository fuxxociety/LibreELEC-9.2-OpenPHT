+               RETRO_DEVICE_ANALOG, i, 0);
+         int16_t tmp_y = cb(0,
+               RETRO_DEVICE_ANALOG, i, 1);
+         state[1 + i] = (uint16_t)tmp_x | (((uint16_t)tmp_y) << 16);
+      }
